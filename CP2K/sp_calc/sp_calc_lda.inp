@set PROJECT LDA
@set RUN ENERGY_FORCE

&FORCE_EVAL
  METHOD Quickstep
  &DFT
     CHARGE 0
     BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     &MGRID
       CUTOFF 450
       REL_CUTOFF 30
       NGRIDS 4
     &END MGRID
     &QS
       METHOD  GPW
     &END QS
     &SCF
       MAX_SCF 100
       EPS_SCF 0.1E-04
       SCF_GUESS ATOMIC
       &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_SINGLE_INVERSE
       &END OT
     &END SCF
     &XC
       &XC_FUNCTIONAL LDA
         &PZ81
         &END PZ81
       &END XC_FUNCTIONAL
     &END XC
     &POISSON
       POISSON_SOLVER PERIODIC
       PERIODIC XYZ
     &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      A   21.5      0.0000000000000000    0.0000000000000000
      B    0.0000000000000000   21.5      0.000000000000000
      C    0.0000000000000000    0.0000000000000000   40.0
      PERIODIC  XYZ
    &END CELL
    @include coord.sys
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q6
    &END KIND
    &KIND Si
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q4
    &END KIND
    &KIND Al
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q3
    &END KIND
    &KIND Zr
      BASIS_SET TZV2P-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q12
    &END KIND
    &KIND H
      MASS 2.0141
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-LDA-q4
    &END KIND
  &END SUBSYS
  &PRINT                    ! Add a PRINT section to output forces
    &FORCES LOW
      FILENAME frc 
    &END FORCES
  &END PRINT
&END FORCE_EVAL

&GLOBAL
  PROJECT ${PROJECT}
  RUN_TYPE ${RUN}
  PRINT_LEVEL MEDIUM 
  EXTENDED_FFT_LENGTHS
&END GLOBAL

