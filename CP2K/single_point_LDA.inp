#Single point calculation with LDA PZA81
 &GLOBAL
   PRINT_LEVEL MEDIUM
   PROJECT_NAME SiOH2-ZrCP2-ChemAds
   RUN_TYPE  ENERGY_FORCES
   SEED 1361
 &END GLOBAL
  
 &MOTION
   &GEO_OPT
     OPTIMIZER BFGS
     TYPE MINIMIZATION
     MAX_ITER 1
   &END GEO_OPT
   &PRINT
     &FORCES
       FORMAT XMOL
     &END FORCES
   &END PRINT
 &END MOTION

 &FORCE_EVAL
   METHOD QS
   &DFT
     CHARGE 0
     BASIS_SET_FILE_NAME ../../cp2k-master/data/BASIS_MOLOPT_UCL
     BASIS_SET_FILE_NAME ../../cp2k-master/data/BASIS_MOLOPT
     POTENTIAL_FILE_NAME ../../cp2k-master/data/GTH_POTENTIALS 
     &MGRID
       CUTOFF 450
       REL_CUTOFF 30
       NGRIDS 4
     &END MGRID
 
     &QS
       METHOD  GPW
     &END QS
             
     &SCF
      !MAX_SCF          1             ! Max n of iterations
       EPS_SCF          0.1E-04       ! SCF converergence
       SCF_GUESS        ATOMIC
       &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_SINGLE_INVERSE
       &END OT
     &END SCF

     &XC 
       &XC_FUNCTIONAL LDA
	 &PZ81
	 &END PZ81	
       &END XC_FUNCTIONAL
      ! &XC_GRID
       !  XC_DERIV SPLINE2
       !  XC_SMOOTH_RHO NONE
      ! &END XC_GRID

      ! &VDW_POTENTIAL 
      !   DISPERSION_FUNCTIONAL PAIR_POTENTIAL
      !   &PAIR_POTENTIAL
      !     TYPE DFTD3(BJ)
      !     PARAMETER_FILE_NAME ../../cp2k-master/data/dftd3.dat
      !     REFERENCE_FUNCTIONAL PZ81
      !   &END PAIR_POTENTIAL
      ! &END VDW_POTENTIAL
     &END XC
     
     &POISSON
       POISSON_SOLVER PERIODIC
       PERIODIC XYZ
     &END POISSON
   &END DFT

   &SUBSYS
     &CELL
       A   21.5      0.0000000000000000    0.0000000000000000
       B    0.0000000000000000   21.5      0.000000000000000
       C    0.0000000000000000    0.0000000000000000   40.0
       PERIODIC  XYZ
       !MULTIPLE_UNIT_CELL  1 1 1
     &END CELL
     &TOPOLOGY
       COORD_FILE_NAME Traj_353_1.xyz
       COORDINATE XYZ
     &END TOPOLOGY   
     
     &KIND O
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q6 
     &END KIND
     &KIND Si
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q4
     &END KIND
     &KIND Al
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q3
     &END KIND
     &KIND Zr
       BASIS_SET TZV2P-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q12
     &END KIND
     &KIND H
       MASS 2.0141
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q1    
     &END KIND
     &KIND C
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q4
     &END KIND 
   
     &PRINT
       &TOPOLOGY_INFO
         XYZ_INFO
       &END TOPOLOGY_INFO
      
       &KINDS
         BASIS_SET
         POTENTIAL
       &END KINDS
     &END PRINT
         
   &END SUBSYS
 &END FORCE_EVAL

